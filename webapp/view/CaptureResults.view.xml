<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:html="http://www.w3.org/1999/xhtml"
	controllerName="programmeMotse.controller.CaptureResults">
	<App>
		<pages>
			<Page backgroundDesign="Solid" showNavButton="true" navButtonPress="onNavBack">
				<content>
					<sap.ui.layout.form:SimpleForm xmlns:sap.ui.layout.form="sap.ui.layout.form" editable="true" layout="ResponsiveGridLayout" id="__form0">
						<sap.ui.layout.form:content>
							<core:Title text="Capture Learner Results" icon="sap-icon://add-activity-2"/>
							<Label text="Select learner"/>
							<ComboBox items="{path: '/'}" width="70%" id="slctLearner" change="onSelectLearner">
								<items>
									<core:ListItem text="{Name} {Surname} ({IDNumber})" key="item1"/>
								</items>
							</ComboBox>
							<Label text ="Program" />
							<Text id="txtProgram" /> 
							<Label text="Competence" width="100%"/>
							<ComboBox id="cmbComptence" width="70%">
								<items>
									<core:ListItem text="Competent" key="item1"/>
									<core:ListItem text="Not competent" key="item2"/>
									<core:ListItem text="Partially competent" key="item3"/>
								</items>
							</ComboBox>
							<Label text="Learner Mark (%)" width="100%"/>
							<Input id="inpMark" width="70%"/>
						</sap.ui.layout.form:content>
					</sap.ui.layout.form:SimpleForm>
				</content>
				<footer>
					<Toolbar width="100%" id="__toolbar1">
						<content>
							<Button text="cancel" press="onNavBack" width="100px" icon="sap-icon://cancel" type="Reject"/>
							<ToolbarSpacer/>
							<Button text="Submit" width="100px" type="Accept" icon="sap-icon://accept" press="onSaveDetails"/>
						</content>
					</Toolbar>
				</footer>
			</Page>
		</pages>
	</App>
</mvc:View>