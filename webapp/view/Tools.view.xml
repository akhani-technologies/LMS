<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:html="http://www.w3.org/1999/xhtml" controllerName="programmeMotse.controller.Tools">
	<App>
		<pages>
			<Page backgroundDesign="Solid" showNavButton="true" navButtonPress="onNavBack">
				<content>
				    <ObjectHeader title="{Name} {Surname}" number="{IDNumber}" introActive="true" titleActive="true"/>
				    <Table noDataText="Click   + the add button to add tools" id="tblTools">
				        <columns>
				            <Column >
				                <header>
				                    <Label text="Training Tool"/>
				                </header>
				            </Column>
				            <Column >
				                <header>
				                    <Label text="Quantity"/>
				                </header>
				            </Column></columns>
				        <headerToolbar>
				            <Toolbar width="100%" >
				                <content>
				                    <ToolbarSpacer />
				                    <Button text="Add" width="auto" icon="sap-icon://add" type="Reject" press="onAddItems"/>
				                </content>
				            </Toolbar>
				        </headerToolbar></Table>
				</content>
			<footer>
			    <Toolbar width="100%" >
			        <content>
			            <ToolbarSpacer />
			            <Button enabled="false" id="btnSave" text="Submit" width="auto" icon="sap-icon://accept" type="Reject" press="onSubmitTools"/>
			        </content>
			    </Toolbar>
			</footer>
			</Page>
		</pages>
	</App>
</mvc:View>