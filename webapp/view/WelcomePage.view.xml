<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:html="http://www.w3.org/1999/xhtml"
	controllerName="programmeMotse.controller.WelcomePage">
	<App >
		<pages>
			<Page>
				<content>
					<HBox width="100%" height="40%" alignContent="Center" alignItems="Center" justifyContent="Center">
						<items>
							<Image width="auto" height="300px" src="images/LMS_small.png" backgroundPosition="center"/>
						</items>
					</HBox>
					<FlexBox class="sapUiTinyMarginTop sapUiLargeMarginBottom" width="100%" alignContent="Center" alignItems="Center" justifyContent="Center">
						<items>
							<Title class="txtTitle" text="SERVICE USER AGREEMENT AND TERMS OF USE" width="100%" textAlign="Center" titleStyle="H1" level="H1"/>
						</items>
					</FlexBox>
					<VBox class="sapUiMediumMargin">
						<FormattedText htmlText="{/HTML}"/>
					</VBox>
				</content>
				<footer>
					<Toolbar width="100%">
						<content>
							<Button text="Decline" press="onDecline" width="auto" type="Reject" icon="sap-icon://sys-cancel"/>
							<ToolbarSpacer/>
							<Button text="Accept" press="onAccept" width="auto" type="Accept" icon="sap-icon://accept"/>
						</content>
					</Toolbar>
				</footer>
			</Page>
		</pages>
	</App>
</mvc:View>