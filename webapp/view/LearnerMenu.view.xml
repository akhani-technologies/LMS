<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:html="http://www.w3.org/1999/xhtml"
	controllerName="programmeMotse.controller.LearnerMenu">
	<App>
		<pages>
			<Page backgroundDesign="Solid" showNavButton="true" navButtonPress="onNavBack">
				<content>
					<TileContainer allowAdd="true">
						<tiles>
							<StandardTile title="Create Learner" press="onLearnerInfoPress" icon="sap-icon://add-contact" activeIcon="sap-icon://customer"
								numberUnit="eur" infoState="Success" removable="false"/>
							<StandardTile title="Search for learners" press="onLearnerList" icon="sap-icon://search" activeIcon="sap-icon://customer"
								infoState="Success" removable="false"/>
							<StandardTile title="Capture Results" press="onCaptureResults" icon="sap-icon://activity-individual" activeIcon="sap-icon://customer"
								numberUnit="eur" infoState="Success"/></tiles>
					</TileContainer>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>