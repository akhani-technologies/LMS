<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:html="http://www.w3.org/1999/xhtml" controllerName="programmeMotse.controller.LoginPage">
	<App>
		<pages>
			<Page>
				<content>
					<HBox width="100%" height="40%" alignContent="Center" alignItems="Center" justifyContent="Center">
						<items>
							<Image width="auto" height="300px" src="images/LMS_small.png" backgroundPosition="center"/>
						</items>
					</HBox>
					<FlexBox class="sapUiTinyMarginTop sapUiLargeMarginBottom" width="100%" alignContent="Center" alignItems="Center" justifyContent="Center">
						<items>
							<Title class="txtTitle" text="Welcome to the Learning Management System" width="100%" textAlign="Center" titleStyle="H1" level="H1"/>
						</items>
					</FlexBox>
					<sap.ui.layout.form:Form xmlns:sap.ui.layout.form="sap.ui.layout.form" editable="true" class="sapUiMediumMarginBegin sapUiLargeMarginTop">
						<sap.ui.layout.form:formContainers>
							<sap.ui.layout.form:FormContainer>
								<sap.ui.layout.form:formElements class="sapUiLargeMarginTop">
									<sap.ui.layout.form:FormElement>
										<sap.ui.layout.form:fields>
											<Input width="70%" id="usernameInput" liveChange="onGenericLogin"/>
										</sap.ui.layout.form:fields>
										<sap.ui.layout.form:label>
											<Label width="100%" required="true" design="Bold" text="Email address"/>
										</sap.ui.layout.form:label>
									</sap.ui.layout.form:FormElement>
									<sap.ui.layout.form:FormElement>
										<sap.ui.layout.form:fields>
											<Input width="70%" type="Password" id="passwordInput" liveChange="onGenericLogin"/>
										</sap.ui.layout.form:fields>
										<sap.ui.layout.form:label>
											<Label text="Password" width="100%" required="true" design="Bold"/>
										</sap.ui.layout.form:label>
									</sap.ui.layout.form:FormElement>
								</sap.ui.layout.form:formElements>
							</sap.ui.layout.form:FormContainer>
						</sap.ui.layout.form:formContainers>
						<sap.ui.layout.form:layout>
							<sap.ui.layout.form:ResponsiveGridLayout columnsL="1" columnsM="1" emptySpanL="1" emptySpanM="1" labelSpanL="6" labelSpanM="4"/>
						</sap.ui.layout.form:layout>
						<sap.ui.layout.form:customData>
							<sap.ui.core:CustomData xmlns:sap.ui.core="sap.ui.core" key="w5g.dt.editable" value="false"/>
						</sap.ui.layout.form:customData>
					</sap.ui.layout.form:Form>
					<FlexBox height="auto" alignItems="Center" justifyContent="Center">
						<items>
							<Button xmlns:action="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1" text="Login" type="Reject" class="sapUiSmallMarginEnd" width="150px" press="onLogin" action:wiring="\{'press':\{'navigation':\{'routeName':'Menu'\}\}\}"/>
						</items>
					</FlexBox>
					<FlexBox height="auto" alignItems="Center" justifyContent="Center">
						<items>
							<Button xmlns:action="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1" text="Register" type="Reject" class="sapUiSmallMarginEnd" width="150px" press="onRegister" action:wiring="\{'press':\{'navigation':\{'routeName':'Register'\}\}\}"/>
						</items>
					</FlexBox>
					<FlexBox height="auto" alignItems="Center" justifyContent="Center" alignContent="Center">
						<items>
							<Button text="Forgot Password" width="160px" press="onForgotPassword" type="Transparent"/>
						</items>
					</FlexBox>
				</content>
			<!--<footer>-->
			<!--    <Toolbar width="100%" id="__toolbar1">-->
			<!--        <content>-->
			<!--            <Button text="Agri" width="100px" press="onAgri"/>-->
			<!--            <Button text="Merseta" width="100px" press="onMerseta"/>-->
			<!--            <Button text="Ceta" width="100px" press="onCeta"/>-->
			<!--        </content>-->
			<!--    </Toolbar>-->
			<!--</footer>-->
			</Page>
		</pages>
	</App>
</mvc:View>