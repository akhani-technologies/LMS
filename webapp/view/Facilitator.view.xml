<mvc:View xmlns:html="http://www.w3.org/1999/xhtml" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="programmeMotse.controller.Facilitator" displayBlock="true">
	<App>
		<pages>
			<Page backgroundDesign="Solid" showNavButton="true" navButtonPress="onNavBack">
				<content>
					<IconTabBar>
						<items>
							<IconTabFilter text="Add Facilitator Info" icon="sap-icon://add-contact" iconColor="Critical" design="Horizontal">
								<content>
									<sap.ui.layout.form:SimpleForm xmlns:sap.ui.layout.form="sap.ui.layout.form" editable="true" layout="ResponsiveGridLayout" id="__form0">
										<sap.ui.layout.form:content>
											<core:Title xmlns:core="sap.ui.core" text="Facilitator Information" emphasized="true" icon="sap-icon://employee-approvals" id="__title2"/>
											<Label xmlns="sap.m" text="Facilitator Name" />
											<Input xmlns="sap.m" width="60%" id="inpFName"/>
											<Label text="Facilitator Surname" />
											<Input id="inpFSurname" width="60%"/>
											<Label xmlns="sap.m" text="ID Number" />
											<Input xmlns="sap.m" width="60%" id="inpID"/>
											<Label xmlns="sap.m" text="Office Number" />
											<Input xmlns="sap.m" width="60%" id="inpONumber"/>
											<Label xmlns="sap.m" text="Cell Number" width="100%" />
											<Input xmlns="sap.m" width="60%" id="inpMobile"/>
											<Label xmlns="sap.m" text="Email Address" width="100%" />
											<Input xmlns="sap.m" width="60%" id="inpEmail"/>
											<Label xmlns="sap.m" text="Proof of registration" width="100%" />
											<u:FileUploader xmlns:html="http://www.w3.org/1999/xhtml" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:sap.ui.layout.form="sap.ui.layout.form" xmlns:u="sap.ui.unified" change="onBankAttachmentChange" name="myFileUpload" uploadUrl="upload/" tooltip="Upload your file to the local server" uploadComplete="handleUploadComplete" id="__uploader1"/>
											<Label width="100%"/>
										</sap.ui.layout.form:content>
									</sap.ui.layout.form:SimpleForm>
									<FlexBox width="100%" alignContent="Center" alignItems="Center" justifyContent="Center">
										<items>
											<Button text="Submit" width="250px" type="Accept" icon="sap-icon://save" press="onSaveDetails"/>
										</items>
									</FlexBox>
								</content>
							</IconTabFilter>
							<IconTabFilter text="Finger print" icon="sap-icon://mri-scan" iconColor="Positive" design="Horizontal">
								<content>
									<MessageStrip text="Please take a finger print of your right index finger" showIcon="true" showCloseButton="true"/>
									<FlexBox width="100%" alignContent="Center" alignItems="Center" justifyContent="Center">
										<items>
											<Button class="sapUiLargeMarginEnd" text="Start" width="auto" icon="sap-icon://restart" type="Emphasized" press="onStartFingerPrint"/>
											<Button class="sapUiLargeMarginEnd" text="Clear" width="auto" icon="sap-icon://cancel" type="Reject"/>
											<Button class="sapUiLargeMarginEnd" text="Save" width="auto" icon="sap-icon://save" type="Accept" press="onSaveFingerPrint"/>
										</items>
									</FlexBox>
									<FlexBox width="100%" alignContent="Center" alignItems="Center" justifyContent="Center">
										<items>
											<Image class="signatureB sapUiLargeMarginEnd" src="images/index.png" width="340px" height="340px" id="finger1"/>
										</items>
									</FlexBox>
								</content>
							</IconTabFilter>
						</items>
					</IconTabBar>
				</content>
				<footer>
					<Toolbar width="100%" id="__toolbar2">
						<content>
							<ToolbarSpacer id="__spacer1"/>
						</content>
					</Toolbar>
				</footer>
			</Page>
		</pages>
	</App>
</mvc:View>