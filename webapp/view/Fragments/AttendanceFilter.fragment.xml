<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<ViewSettingsDialog confirm="handleFilterAttendConfirm">
		<filterItems>
			<ViewSettingsFilterItem text="Type of user" key="UserType" multiSelect="false">
				<items>
					<ViewSettingsItem text="Learner" key="UserType+EQ+Learner"/>
					<ViewSettingsItem text="Facilitator" key="UserType+EQ+Facilitator"/>
				</items>
			</ViewSettingsFilterItem>
			<ViewSettingsFilterItem text="Confirmation Type" key="ConfirmationType" multiSelect="false">
				<items>
					<ViewSettingsItem text="Attendance" key="ConfirmationType+EQ+Attendance"/>
					<ViewSettingsItem text="Special request" key="ConfirmationType+EQ+Special request"/>
					<ViewSettingsItem text="Leaving" key="ConfirmationType+EQ+Leaving"/>
				</items>
			</ViewSettingsFilterItem>
		</filterItems>
	</ViewSettingsDialog>
</core:FragmentDefinition>