<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:html="http://www.w3.org/1999/xhtml"
	controllerName="programmeMotse.controller.MilestoneReport">
	<App>
		<pages>
			<Page showNavButton="true" navButtonPress="onNavBack">
				<content>
					<IconTabBar>
						<items>
							<IconTabFilter class="iconFlt" text="Pre-Implementation Phase " icon="sap-icon://checklist-item" iconColor="Critical" design="Horizontal">
								<content>
									<Table id="tblPre" items="{path: '/'}">
										<items>
											<ColumnListItem>
												<cells>
													<Text text="{Project}"/>
													<Text text="{Description}"/>
													<Text text="{Rate}"/>
													<Text text="{Date}"/></cells>
											</ColumnListItem>
										</items>
										<columns>
											<Column mergeDuplicates="true">
												<header>
													<Label text="Project"/>
												</header>
											</Column>
											<Column>
												<header>
													<Label text="Task"/>
												</header>
											</Column>
											<Column >
												<header>
													<Label text="Rate"/>
												</header>
											</Column>
											<Column >
												<header>
													<Label text="Date"/>
												</header>
											</Column>
										</columns>
									</Table>
								</content>
							</IconTabFilter>
							<IconTabFilter class="iconFlt" text="Implementation Phase " icon="sap-icon://checklist-item-2" iconColor="Positive" design="Horizontal">
								<content>
									<Table id="tblImp" items="{path: '/'}">
										<items>
											<ColumnListItem>
												<cells>
													<Text text="{Project}"/>
													<Text text="{Description}"/>
													<Text text="{Rate}"/>
													<Text text="{Date}"/></cells>
											</ColumnListItem>
										</items>
										<columns>
											<Column mergeDuplicates="true">
												<header>
													<Label text="Project"/>
												</header>
											</Column>
											<Column>
												<header>
													<Label text="Task"/>
												</header>
											</Column>
											<Column >
												<header>
													<Label text="Rate"/>
												</header>
											</Column>
											<Column >
												<header>
													<Label text="Date"/>
												</header>
											</Column>
										</columns>
									</Table>
								</content>
							</IconTabFilter>
							<IconTabFilter class="iconFlt" text="Post-Implementation Phase" icon="sap-icon://checklist-2" design="Horizontal" iconColor="Negative">
								<content>
									<Table id="tblPost" items="{path: '/'}">
										<items>
											<ColumnListItem>
												<cells>
													<Text text="{Project}"/>
													<Text text="{Description}"/>
													<Text text="{Rate}"/>
													<Text text="{Date}"/></cells>
											</ColumnListItem>
										</items>
										<columns>
											<Column mergeDuplicates="true">
												<header>
													<Label text="Project"/>
												</header>
											</Column>
											<Column>
												<header>
													<Label text="Task"/>
												</header>
											</Column>
											<Column >
												<header>
													<Label text="Rate"/>
												</header>
											</Column>
											<Column >
												<header>
													<Label text="Date"/>
												</header>
											</Column>
										</columns>
									</Table>
								</content>
							</IconTabFilter>
						</items>
					</IconTabBar>
				</content>
				<footer>
					<Toolbar width="100%" >
						<content>
							<ToolbarSpacer />
							<Button xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns:html="http://www.w3.org/1999/xhtml" xmlns="sap.m" press="onPrint"
								text="Print List" width="auto" icon="sap-icon://print" type="Emphasized" id="__button3"/>
						</content>
					</Toolbar>
				</footer>
			</Page>
		</pages>
	</App>
</mvc:View>